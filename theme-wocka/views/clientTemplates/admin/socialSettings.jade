      form(role="form", name="facebook", novalidate)
        .form-group
          label.control-label(for="showShareButton") Show share button
          toggle-switch-light(ng-model="settings.social.facebook.showShareButton", text-on="Yes", text-off="No")

  .panel.panel-default
    .panel-heading Github
    .panel-body
      form(role="form", name="github", novalidate)
        .form-group(ng-class="{'has-error': hasError('github.username')}")
